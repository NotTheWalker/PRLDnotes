start
    Declarations
        num number1
        num number2
    output "Please enter two numbers"
    input number1, number2
    sum(number1, number2)
    difference(number1, number2)
stop

void sum(num x, num y)
    Declarations
        num result
    result = x + y
    output x, "+", y, "=" result
return

void difference(num x, num y)
    Declarations
        num result
    result = x - y
    output x, "-", y, "=" result
return